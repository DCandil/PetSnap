<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetSnap</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="icon" href="/assets/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9d580e000e.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
  </head>
 <%- include('modules/navbar.ejs') %>

  <body>
    <div class="d-flex justify-content-center align-items-center vh-100">
      <div class="card border border-success border-2 p-4 col-md-4">
      <form 
      action="/pet/createFormAddPet" 
      method="post" 
      enctype="multipart/form-data">
        <div class="mb-3">
          <label for="inputName" class="form-label"><strong>Nombre (*)</strong></label>
          <input 
            type="text" 
            class="form-control" 
            id="inputName" 
            aria-describedby="name"
            name="pet_name"
          >
        </div>
        <div class="mb-3">
          <label for="inputPetDescription" class="form-label"><strong>Describe a tu mascota</strong></label>
          <input 
            type="text" 
            class="form-control" 
            id="inputPetDescription" 
            aria-describedby="description"
            name="pet_description"
          >
        </div>
        <div class="mb-3">
          <label for="inputSpecies" class="form-label"><strong>Especie (*)</strong></label>
          <input 
            type="text" 
            class="form-control" 
            id="inputSpecies" 
            aria-describedby="specie"
            name="species"
          >
        </div>
        <div class="mb-4 d-flex flex-column">
          <label for=""><strong>Año de adopción (*)</strong></label>
          <input 
              type="number"
              min="1950"
              max="2100"
              name="adoption_year"
          >
      </div>
      <div class="mb-4 d-flex flex-column">
        <select name="owner_id">
          <option disabled selected><strong>¿Quién es su dueño?</strong></option>
          <% result.forEach((elem)=>{ %>
              <option value="<%= elem.owner_id %>"><%= elem.owner_name %></option>
          <% }) %>
      </select>
    </div>
        <div class="mb-3 text-center">
          <label for="inputImg" class="form-label uploadFile d-flex align-items-center"><strong>Sube a tu mascota:</strong> <i class="fa-solid fa-paw fa-3x mx-4"></i></label>
          <input 
            type="file" 
            class="form-control" 
            id="inputImg" 
            aria-describedby="faceImg"
            name="img"
            hidden
          >
        </div>
        <p style="color: red;"> <%= typeof message != 'undefined' ? message: null %> </p>
        <div class="d-flex justify-content-center gap-1">

          <button type="submit" class="text-success align-content-center icon"><i class="fa-2x mx-4 fa-solid fa-circle-check mt-2 "></i></button>
          <span type="button" onclick="window.location.href='/'" class="align-content-center"><i class="mt-2 fa-3x fa-solid fa-xmark text-danger mx-4"></i></span>
          </div>
      
      </form>
    </div>
    </div>

    <%- include('modules/footer.ejs')  %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>