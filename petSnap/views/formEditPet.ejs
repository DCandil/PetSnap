<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PetSnap</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="icon" href="/assets/favicon.png" type="image/x-icon" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/9d580e000e.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <%- include('modules/navbar.ejs') %>

  <body>
<div>
    <div class="d-flex justify-content-center align-items-center vh-100">
      <div class="card border border-success border-2 p-4 col-md-4">
        <form action="/pet/edit/<%= result.pet_id %>" method="post">
          <p class="fs-3 text-center fw-bold">Pantalla de edici칩n de <%= result.pet_name %></p>
          <div class="mb-3">
            <label for="inputName" class="form-label"><strong>Nombre (*)</strong></label>
            <input
              type="text"
              class="form-control"
              id="inputName"
              aria-describedby="name"
              name="pet_name"
              value="<%= result.pet_name %>"
            />
          </div>
          <div class="mb-3">
            <label for="inputDescription" class="form-label"><strong>Descripci칩n</strong></label>
            <input
              type="text"
              class="form-control"
              id="inputDescription"
              aria-describedby="description"
              name="pet_description"
              value="<%= result.pet_description %>"
            />
          </div>
          <div class="mb-3 d-flex flex-column">
            <label for="" class="fw-bold">A침o de adopci칩n (*)</label>
            <input type="number" min="1950" max="2100" name="adoption_year" />
          </div>
          <div class="mb-3">
            <label for="species" class="form-label"><strong>Especie (*)</strong></label>
            <input
              type="text"
              class="form-control"
              id="species"
              aria-describedby="species"
              name="species"
              value="<%= result.species %>"
            />
          </div>

          <p style="color: red">
            <%= typeof message != 'undefined' ? message: null %>

          </p>
          <div class="d-flex justify-content-center gap-5 mt-4">

            <button type="submit" class="d-flex flex-column align-items-center icon">
              <i class="icon fa-2x fa-solid fa-pen-to-square text-success"></i>
            </button>
          
            <button type="reset" class="d-flex flex-column align-items-center icon">
              <i class="fa-2x fa-solid fa-repeat text-warning"></i>
            </button>
          
            <span 
              type="button" 
              class="d-flex flex-column align-items-center icon"
              onclick="window.location.href='/owner/showOwner/<%= result.owner_id %>'">
              <i class="uploadFile fa-3x fa-solid fa-xmark text-danger"></i>
            </span>
          </div>

        </form>
      </div>
    </div>
  </div>
    <%- include('modules/footer.ejs') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
