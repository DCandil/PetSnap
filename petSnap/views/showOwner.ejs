<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetSnap</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="icon" href="/assets/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9d580e000e.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
  </head>
  <header><%- include('modules/navbar.ejs') %></header>
  <main>
    <div class="back_title">
    <div class="d-flex flex-wrap justify-content-center gap-4 mt-5 mx-5">
      <div>
        <img
          src="/images/owner/<%= resultOwner.owner_img?resultOwner.owner_img:'user.png' %>"
          alt="" style="width: 18rem" class="rounded-circle"
        />
      </div>
      <div class="d-flex flex-column justify-content-center">
        <div class="d-flex flex-column gap-2 fs-4">
          <p><i class="fa-solid fa-signature"></i> <%= resultOwner.owner_name %> <%= resultOwner.owner_lastname %></p>
          <p><i class="fa-solid fa-at"></i> <%= resultOwner.email %></p>
          <p><i class="fa-solid fa-pen"></i> <%= resultOwner.owner_description %></p>
          <p><i class="fa-solid fa-phone"></i> <%= resultOwner.contact_phone %></p>
        </div>
      </div>
    </div>
    </div>
    
    <div class="container">
        <div class="row justify-content-center g-4 mt-1">
          <% resultPet.forEach((elem) => { %>
            <div class="col-12 d-flex align-items-center rounded-5 p-0">
              <div>
                <img 
                  src="/images/pet/<%= elem.pet_img ? elem.pet_img : 'user.png' %>" 
                  class="rounded-5" 
                  alt="Imagen de la mascota" 
                  style="width: 250px; height: 250px; object-fit: cover;">
              </div>
      
              <div class="ms-3 m-auto">
                <h3 class=""><%= elem.pet_name %></h3>
                <p class=""><strong>Descripción:</strong> <%= elem.pet_description %></p>
                <p class=""><strong>Año de adopción:</strong> <%= elem.adoption_year %></p>
                <p class=""><strong>Especie:</strong> <%= elem.species %></p>
              </div>
            </div>
            <div class=" d-flex flex-column align-items-center mb-5">
              <div class="separator"></div>
            </div>
          <% }) %>
        </div>
      </div>

      
  </main>
  <%- include('modules/footer.ejs')  %>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
