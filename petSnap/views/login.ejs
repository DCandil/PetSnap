<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PetSnap</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="icon" href="/assets/favicon.png" type="image/x-icon" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/9d580e000e.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <%- include('modules/navbar.ejs') %>

  <body>
    <section class="backLogin d-flex justify-content-center align-items-center">
      <div class="formLogin border border-2 border-black d-flex flex-column rounded-5">
        <p class="text-center mt-2">
          <img src="/assets/faviconlogin.png" alt="">
        </p>
       
        <form action="/owner/login" method="post" class="d-flex flex-column w-100">
          <div class="mb-3 mx-3">
            <label for="inputEmail" class="form-label fw-bold">Email</label>
            <input
              type="text"
              class="form-control"
              id="inputEmail"
              aria-describedby="emailHelp"
              name="email"
            />
          </div>
    
          <div class="mb-3 mx-3">
            <label for="inputPassword" class="form-label fw-bold">Password</label>
            <input
              type="password"
              class="form-control"
              id="inputPassword"
              aria-describedby="password"
              name="password"
            />
          </div>
          <p style="color: red" class="mx-3 fw-bold">
            <%= typeof message != 'undefined' ? message : null %>
          </p>
          <button type="submit" class="btn btn-success text-black fw-bold mb-3 mx-3">Ingresar</button>

          <p class="text-center fw-bold">
            No estás registrado?
            <a href="/owner/formAddOwner">Registro aquí </a>
          </p>
        </form>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
